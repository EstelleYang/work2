<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/toolbar_back"  android:id="@+id/id_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/city_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#66E0DFE0"
            android:scrollbars="none"
            android:layout_marginRight="40dp"
            android:footerDividersEnabled="true"
            android:dividerHeight="1px">
        </ListView>
        <TextView
            android:id="@+id/display"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@color/app_pri_color"
            android:visibility="invisible"
            android:gravity="center"
            android:textColor="@color/white"/>

        <com.lzjs.uappoint.myview.SliderBar
            android:id="@+id/city_side_bar"
            android:layout_width="@dimen/normal_input_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
</LinearLayout>