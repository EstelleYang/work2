<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f8f8f6"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/o_p_business"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/business_gree"
            android:drawablePadding="5dp"
            android:text="商家名称"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/o_status"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/green"/>
    </LinearLayout>
    <RelativeLayout
        android:paddingLeft="19dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <ImageView
            android:id="@+id/o_eq_order_pic"
            android:src="@drawable/tupian"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/eq_order_lly"
            android:layout_toRightOf="@+id/o_eq_order_pic"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="20dp">
            <TextView
                android:id="@+id/o_p_business_1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="装备名称"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/o_p_price"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥888"
                android:textStyle="bold"
                android:textColor="@color/tv_Red"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/o_eq_order_pic"
            android:layout_below="@+id/eq_order_lly"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/harvestAddress"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:singleLine="false"
                android:text="收货地址:"
                android:textColor="#a0a0a0"
                android:textSize="15sp"/>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="30dp">
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/buyNum"
            android:layout_weight="1"
            android:text="共2件"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/actualpayment"
            android:layout_weight="1"
            android:text="实付：888元"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/bg_Gray"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="30dp">
        <View
            android:layout_weight="1.5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/o_p_review"

            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gree_bg"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:text="评论"/>
        <TextView

            android:id="@+id/order_deldte"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gree_bg"
            android:textColor="@color/green"
            android:gravity="center"
            android:text="删除"/>
    </LinearLayout>

</LinearLayout>
