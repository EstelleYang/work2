<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="10dip"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/tv_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.lzjs.uappoint.myview.CircleImageView
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dip"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/civ_head_item"
                android:src="@drawable/pro_head"/>
            <TextView
                android:id="@+id/tv_user_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特兰普"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/civ_head_item"
                android:textColor="@color/chocolate"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_fdata_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01-22"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/civ_head_item"
                android:layout_marginLeft="10dip"
                android:layout_below="@+id/tv_user_name_item"
                android:textColor="@color/gray"
                android:textSize="10sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dip" >
            <TextView
                android:id="@+id/content_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:text="回复内容"
                android:textColor="@color/dimgray"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/top_category_bar_background"
        android:layout_height="1dp"/>

</LinearLayout>