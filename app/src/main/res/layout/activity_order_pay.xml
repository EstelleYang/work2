<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lzjs.uappoint.act.OrderPayActivity">
    <include layout="@layout/home_top_title1"/>
    <LinearLayout
        android:id="@+id/pay_addre_ps"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="收&#160;&#160;货&#160;&#160;人："
            android:textColor="@color/bg_Black"
            android:gravity="center_horizontal|left"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/addre_name"
            android:text="陈林栋"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|left"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/addre_tel"
            android:text="13619329282"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|left"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="收货地址："
            android:textColor="@color/bg_Black"
            android:gravity="center_horizontal|left"/>

        <TextView
            android:layout_weight="2"
            android:id="@+id/addre_detail"
            android:text="甘肃省兰州市城关区屌丝街"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|left"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pay_addre_zq"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="取货地址："
                android:textColor="@color/bg_Black"
                android:gravity="center_horizontal|left"/>

            <TextView
                android:layout_weight="2"
                android:id="@+id/addre_merchan"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|left"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/bg_Gray"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/pay_p_business"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/business_gree"
            android:drawablePadding="5dp"
            android:text="商家名称"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/bg_Gray"/>
    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/order_list_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="30dp">
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_number"
            android:layout_weight="2"
            android:text="共1件"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="2"
            android:text="实付:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pay_total"
            android:layout_weight="1"
            android:text="888元"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_pay"
        android:background="@drawable/qr"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="去支付"/>
</LinearLayout>
