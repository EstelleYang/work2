<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="8.0dip">

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="1.0"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/tv_photo"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/ll_title_brief"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_photo"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@+id/tv_photo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="致敬！中国医生春节坚守埃博拉疫区"
                android:textColor="@color/text_color"
                android:maxLines="1"
                android:textSize="@dimen/button_text_size" />

            <TextView
                android:id="@+id/tv_brief"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3.0dip"
                android:maxLines="3"
                android:text="“离家的时候，孩子只有16个月大。现在都18个月了。"
                android:textColor="@color/gray"
                android:textSize="@dimen/button_text_little_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_photo"
            android:layout_alignLeft="@+id/ll_title_brief"
            android:layout_marginTop="10.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="2016年1月5日"
                android:textColor="@color/text_light_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_replay"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/pinglun_normal"
                android:drawablePadding="10dp"
                android:text="20"
                android:textColor="@color/text_light_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_assist"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/zan"
                android:drawablePadding="10dp"
                android:text="60"
                android:textColor="@color/text_light_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_catName"
                android:layout_width="wrap_content"
                android:layout_height="18.0dip"
                android:layout_gravity="bottom|center|right"
                android:background="@drawable/icon_tag_selector"
                android:gravity="center"
                android:text="专题"
                android:textColor="@color/navigate_color"
                android:textSize="@dimen/button_text_smaller_size"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>