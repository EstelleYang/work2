<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        >
        <ImageView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/eq_listitem_imgView"
            android:layout_gravity="center_horizontal|bottom"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:text="建设的风景"
            android:id="@+id/eq_list_tital"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/bg_White"
            android:background="@color/bg_Black"
            android:alpha="0.4"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/bg_Gray"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/productIntr"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:drawableRight="@drawable/xx"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <View
    android:layout_width="match_parent"
    android:background="@color/bg_Gray"
    android:layout_height="1dp"/>
    <TextView
    android:id="@+id/eq_listitem_price_dazhe"
    android:textColor="@color/gray"
    android:textSize="20dp"
    android:paddingLeft="20px"
    android:text="￥88"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:background="@color/bg_Gray"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/eq_listitem_price"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:paddingLeft="20px"
        android:text="￥88"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/bg_Gray"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:text="购买数量："
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/image_button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_icon"
            android:clickable="false"
            />
        <EditText
            android:id="@+id/eq_buy_num"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"/>
        <ImageButton
            android:id="@+id/image_button_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sub_icon"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/bg_Gray"
        android:layout_height="1dp"/>
</LinearLayout>
