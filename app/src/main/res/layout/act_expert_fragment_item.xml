<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="8.0dip">

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="1.0"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/tv_image"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/ll_title_brief"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_image"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@+id/tv_image"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:text="姓名"
                    android:textColor="@color/text_color"
                    android:maxLines="1"
                    android:textSize="@dimen/button_text_size" />
                <TextView
                    android:id="@+id/tv_depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:text="科室"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/button_text_size" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_special"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3.0dip"
                android:maxLines="3"
                android:text="特长简介。"
                android:textColor="@color/gray"
                android:textSize="@dimen/button_text_little_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_title_brief"
            android:layout_alignLeft="@+id/ll_title_brief"
            android:layout_toRightOf="@+id/tv_image"
            android:layout_marginTop="10.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginLeft="5dp"
                android:text="职称"
                android:textColor="@color/text_light_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_post"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawablePadding="10dp"
                android:text="职务"
                android:textColor="@color/text_light_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_degree"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawablePadding="10dp"
                android:text="学历"
                android:textColor="@color/text_light_color"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>