<?xml version="1.0" encoding="utf-8"?>
<!-- 我的评价 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_White">

    <ImageView
        android:src="@drawable/ic_launcher"
        android:id="@+id/appraise_view_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="1dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.85">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="乐乐"
            android:id="@+id/merchantName"
            android:textSize="18sp"
            android:textColor="@color/bg_Black"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="69dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论内容："
            android:textSize="14sp"
            android:textColor="@color/red"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hahahah"
            android:id="@+id/appraiseContent"
            android:textSize="14sp"
            android:textColor="@color/venue_color_black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价时间："
            android:textSize="14sp"
            android:textColor="@color/red"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-1-10"
            android:id="@+id/appraiseTime"
            android:textSize="14sp"
            android:textColor="@color/venue_color_black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/my_appraise_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家回复内容："
            android:textSize="14sp"
            android:textColor="@color/red"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="heiehei"
            android:id="@+id/replyContent"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/my_appraise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家回复时间："
            android:textSize="14sp"
            android:textColor="@color/red"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-3-25"
            android:id="@+id/replyTime"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <!-- 灰色分割线 回复 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_Gray"/>

    </LinearLayout>

</LinearLayout>