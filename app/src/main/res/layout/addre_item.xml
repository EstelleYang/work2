<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="收&#160;&#160;货&#160;&#160;人："
            android:textColor="@color/bg_Black"
            android:gravity="center_horizontal|left"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/addre_name"
            android:text="陈林栋"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|left"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/addre_tel"
            android:text="13619329282"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|left"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="收货地址："
            android:textColor="@color/bg_Black"
            android:gravity="center_horizontal|left"/>

        <TextView
            android:layout_weight="2"
            android:id="@+id/addre_detail"
            android:text="甘肃省兰州市城关区屌丝街"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="@dimen/mine_item_height"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/addre_isdefault"
            android:layout_weight="0.5"
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="默认"
            android:textColor="@color/bg_Black"
            android:gravity="center|left"/>


        <!--<TextView-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:id="@+id/addre_editor"-->
            <!--android:text="编辑"-->
            <!--android:layout_width="@dimen/mine_item_height"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textStyle="bold"-->
            <!--android:textColor="@color/bg_Black"-->
            <!--android:gravity="center_horizontal|right"/>-->
        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/addre_del"
            android:text="删除"
            android:layout_width="@dimen/mine_item_height"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/bg_Black"
            android:gravity="center_horizontal|right"/>

    </LinearLayout>
</LinearLayout>
